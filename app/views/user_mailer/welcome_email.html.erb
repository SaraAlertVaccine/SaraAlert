<% content_for :preheader do %>
  Welcome to the <%= ADMIN_OPTIONS['app_name'] %> System!
<% end %>

<% content_for :body do %>
  <p>Dear <%= @user.email[/[^@]+/] %>,</p>

  <p>
    You've been added to the <%= @user.jurisdiction.name %> jurisdiction. Your initial login credentials are:
  </p>
  <p>
    <b>Username:</b> <%= @user.email %>
    <br />
    <b>Temporary password:</b> <%= @password %>
  </p>
  <p style="margin-bottom: none">
    This temporary password is only valid for 72 hours, so please log in to the <%= ADMIN_OPTIONS['app_name'] %> application to change your password as soon as possible. If copying and pasting the temporary password results in an invalid login attempt, please manually type it instead.
  </p>

  <%= render partial: 'main_mailer/responsive_button', locals: { link: root_url, text: ADMIN_OPTIONS['app_name'] } %>
<% end %>

<% content_for :footer do %>
  <p>
    This message was automatically generated by the <%= ADMIN_OPTIONS['app_name'] %> system. If you wish to stop receiving these notifications or believe that it was a mistake, please contact the help desk.
  </p>
  <%= render partial: 'main_mailer/contact_us' %>
<% end %>
